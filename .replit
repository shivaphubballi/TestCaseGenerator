modules = ["java"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Java TestGen Library"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "testgen_info"

[[workflows.workflow]]
name = "Java TestGen Library"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "javac -d bin -cp src src/main/java/com/testgen/cli/CommandLineRunner.java && java -cp bin com.testgen.cli.CommandLineRunner help"
waitForPort = 5000

[[workflows.workflow]]
name = "testgen_info"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "find src -type f -name \"*.java\" | sort && javac -version && echo \"Checking pom.xml:\" && ls -la pom.xml 2>/dev/null || echo \"No pom.xml found\""

[deployment]
run = ["sh", "-c", "javac -d bin -cp src src/main/java/com/testgen/cli/CommandLineRunner.java && java -cp bin com.testgen.cli.CommandLineRunner help"]
